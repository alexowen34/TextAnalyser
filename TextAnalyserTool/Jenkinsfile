//Test pipeline file - doesn't actually do anything useful for now.
pipeline {
  agent any
  stages {
    stage('Build / Compile') {
      steps {
        withMaven(maven : 'M3') {
          dir("TextAnalyserTool") {
            bat 'mvn clean compile'
          }
        }
      }
    }
    stage('JUnit Tests') {
      steps {
        withMaven(maven : 'M3') {
          dir("TextAnalyserTool") {
            bat 'mvn test'
          }
        }
      }
    }
  }
}
